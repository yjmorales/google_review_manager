{% set title = 'Google Review Link Generator' %}

<!DOCTYPE html>
<html lang="en">

<head>

    {% include '/layout/partials/_metas.html.twig' %}

    <title>{% block title %}{% endblock %}</title>

    <link href="{{ asset('/img/favicon.ico') }}" rel="icon">
    <link href="{{ asset('/img/favicon.ico') }}" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/smartwizard@6/dist/css/smart_wizard_all.min.css" rel="stylesheet"
          type="text/css"/>
    <link href="{{ asset('/dist/css/landing_css.css') }}" rel="stylesheet">
    {% block css %}{% endblock %}

    {# Google Ad Sense #}
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4482787083166410"
            crossorigin="anonymous"></script>

    {# Google analytics #}
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ googleMeasurementId }}"></script>

</head>

<body>

{# Block urls #}
<div id="urls" class="d-none" {% block urls %}{% endblock %}></div>
<div id="siteData" data-google-measurement-id="{{ googleMeasurementId }}"></div>

{# Top nav bar #}
<section id="topbar" class="d-flex align-items-center">
    <div class="container d-flex justify-content-center justify-content-md-between">

        <div class="contact-info d-flex align-items-center">
            {{ owner_company_name }}
        </div>

        <div class="social-links d-none d-md-flex align-items-center">
            <div class="contact-info d-flex align-items-center">
                Follow us
            </div>
            <a title="{{ owner_company_name }} Linkedin profile" href="{{ sys_admin_linkedin_profile_url }}"
               class="linkedin">
                <i class="bi bi-linkedin"></i>
            </a>
            <a title="{{ owner_company_name }} website"
               href="{{ sys_admin_personal_page_url }}"
               class="website">
                <i class="bi bi-globe"></i>
            </a>
        </div>
    </div>
</section>

<header id="header" class="d-flex align-items-center">
    <div class="container d-flex align-items-center justify-content-between">


        <div>
            <div class="d-inline-block p-2">
                <a href="{{ path('index') }}">
                    <img src="{{ asset('/img/logo.png') }}" width="50" height="50" style="vertical-align: text-bottom">
                </a>
            </div>
            <div class="d-inline-block">
                <h1 class="logo">
                    <a href="{{ path('index') }}">{{ title }}</a>
                </h1>
                <div class="d-block">
                    <a class="reviews-manager-link p-2" href="{{ path('business_list') }}" target="_blank">
                        ...and review manager
                        <i class='bx bx-link-external'></i>
                    </a>
                </div>
            </div>
        </div>


        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="nav-link scrollto active" href="#hero">
                        Generate Google Review Link
                    </a></li>
                <li id="linkToGoogleReviewResults" class="d-none">
                    <a class="nav-link scrollto" href="#yourGoogleReviewLink">
                        Your Google Review Link
                    </a>
                </li>
                <li><a class="nav-link scrollto" href="#contact">Contact Us</a></li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav>
    </div>
</header>

{% block content %}{% endblock %}

{% include '/landing/layout/_footer.html.twig' %}


<div id="preloader"></div>

<a href="#" class="back-to-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
</a>

<script src="{{ asset('/dist/js/landing_js.js') }}"></script>

<script>
    // Google tag (gtag.js)
    window.dataLayer = window.dataLayer || [];

    function gtag() {
        dataLayer.push(arguments);
    }

    gtag('js', new Date());
    const measurementId = $('#siteData').data('google-measurement-id');
    gtag('config', measurementId);
</script>


{% block js %}{% endblock %}
</body>

</html>