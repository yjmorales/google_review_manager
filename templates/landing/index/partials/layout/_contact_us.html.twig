<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h3><span>Contact Us</span></h3>
            <p>
                Did you prefer to reach out us? We would like to help you.
            </p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-3 offset-3">
                <div class="info-box  mb-4">
                    <i class="bx bx-envelope"></i>
                    <h3>Email Us</h3>
                    <p> {{ sys_admin_email }}</p>
                </div>
            </div>
            <div class="col-3">
                <div class="info-box  mb-4">
                    <i class="bx bx-phone-call"></i>
                    <h3>Call Us</h3>
                    <p>{{ sys_admin_phone|dashed }}</p>
                </div>
            </div>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-6 offset-3">
                <form id="form_contact_us" name="form_contact_us" method="post" role="form" class="php-email-form">
                    <div class="row">
                        <div class="col form-group">
                            <input type="text" name="name" class="form-control" placeholder="Your Name">
                        </div>
                        <div class="col form-group">
                            <input type="email" class="form-control" name="email" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="subject" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="message" rows="5" placeholder="Message"
                                  required></textarea>
                    </div>
                    <div class="text-center">
                        <button id="btnContactUsSubmit" data-url="{{ path('api_v1_landing_contact_us_send_email_post') }}" type="submit">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section><!-- End Contact Section -->