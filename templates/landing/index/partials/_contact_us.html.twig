{% import '/components/helpers_macro.html.twig' as helpers %}

<section id="contact" class="contact">
    <div class="container">
        <div class="section-title">
            <h3><span>Contact Us</span></h3>
            <p>
                Did you prefer to reach out us? We would like to help you.
            </p>
        </div>

        <div class="row">
            <div class="col-md-3 offset-md-3 col-sm-6 offset-sm-0">
                <div class="info-box mb-md-4 pt-md-4 pt-sm-1">
                    <i class="bx bx-envelope"></i>
                    <h3>Email Us</h3>
                    <p> {{ sys_admin_email }}</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="info-box mb-md-4 pt-md-4 pt-sm-1">
                    <i class="bx bx-phone-call"></i>
                    <h3>Call Us</h3>
                    <p>{{ sys_admin_phone|dashed }}</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 col-md-6 offset-md-3">
                <form id="form_contact_us" name="form_contact_us" method="post" role="form" class="php-email-form">
                    <div class="row">
                        <div class="col-sm-12 col-md-6 form-group">
                            <input type="text" name="name" class="form-control" placeholder="Your Name">
                        </div>
                        <div class="col-sm-12 col-md-6 form-group">
                            <input type="email" class="form-control" name="email" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="subject" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="message" rows="5" placeholder="Message"
                                  required></textarea>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" id="btnContactUsSubmit"
                                data-url="{{ path('api_v1_landing_contact_us_send_email_post') }}"
                                data-input="#form_contact_email"
                                data-sitekey="{{ siteKey }}"
                                type="submit">
                            {{ helpers.buttonSpinner() }}
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section><!-- End Contact Section -->