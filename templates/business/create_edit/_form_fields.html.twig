{% import '/components/helpers_macro.html.twig' as helpers %}

<style>
    .form-check {
        padding-left: 0;
    }
</style>
<input id="business_form_id" value="{{ business.id }}" type="hidden">
{{ form_widget(form.place) }}
<div class="form-group row">
    <div class="col">
        {{ helpers.field(form.name) }}
    </div>
</div>
<div class="form-group row">
    <div class="col">
        {{ helpers.field(form.email) }}
    </div>
</div>
<div class="form-group row">
    <div class="col">
        {{ helpers.field(form.industrySector) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <div class="mb-3">
            {{ helpers.inputSpinner(form.address) }}
        </div>
        <div class="mb-3">
            {{ helpers.field(form.city) }}
        </div>
        <div class="mb-2 row">
            <div class="col">
                {{ helpers.field(form.state) }}
            </div>
            <div class="col">
                {{ helpers.field(form.zipCode) }}
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col">
        <label>Status</label>
        <div class="d-block">{{ form_widget(form.active) }}</div>
        {% if form.active.vars.attr.help ?? false %}
            <small class="text-muted">{{ form.active.vars.attr.help }}</small>
        {% endif %}
    </div>
</div>