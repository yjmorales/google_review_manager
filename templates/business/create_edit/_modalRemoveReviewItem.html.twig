{# Modal for removing only one review #}
<div class="modal fade"
     id="modalRemoveReviewItem"
     tabindex="-1"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-gradient-danger pt-1 pb-1">
                <span class="modal-title " data-id="modal-title" id="modalRemoveReviewItemLabel">Remove Google Review Link</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-id="modal-body">
                <div class="row">
                    <div id="modalRemoveReviewItemConfirmationText" class="col text-center font-14">
                        <p class="mb-0">You selected to remove a Google Review Link.</p>
                        <p class="mb-0">If you remove the Google Review Link the operation cannot be undo.</p>
                        <p class="mb-0">Do you want to proceed?</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer p-1">
                <button id="btnSubmitRemoveReview" type="button"
                        class="btn btn-info btn-xs m-0">Accept
                </button>
            </div>
        </div>
    </div>
</div>

