{% extends '/layout/base.html.twig' %}

{% set title = 'Google Review Manager - Business list' %}

{% block content %}
    <div class="row">
        <div class="col p-3">
            <h3>Business</h3>
            <table class="table table-hover text-nowrap table-sm">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Review Code</th>
                    <th>Status</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for item in business %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.location }}</td>
                        <td></td>
                        <td>
                            {% if item.active %}
                                <i class="fa fa-check text-success"></i>
                            {% else %}
                                <i class="fa fa-times text-danger"></i>
                            {% endif %}
                        </td>
                        <td>
                            <button type="button" class="btn btn-outline-info btn-xs">
                                <i class="fa fa-pen"></i>
                            </button>
                            <button type="button" class="btn btn-outline-danger btn-xs">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}