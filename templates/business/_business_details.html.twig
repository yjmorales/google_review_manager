{% import '/components/helpers_macro.html.twig' as helpers %}

<div class="d-none " data-id="{{ business.id }}" data-child-list-row-details="true">
    <div class="row p-3 datatable-child-details">
        <div class="col-4">
            <div class="row">
                <div class="col mb-2">
                    <a href="{{ path('business_edit', {id: business.id}) }}" type="button" class="btn btn-info btn-xs">
                        <i class="fa fa-pen"></i>
                        Edit Business
                    </a>
                    <button type="button" class="btn btn-info btn-xs">
                        <i class="fa fa-plus"></i>
                        Create a Review Link
                    </button>
                </div>
            </div>
            <strong>
                <i class="fa fa-briefcase" aria-hidden="true"></i>
                Business name
            </strong>
            <p class="text-muted">{{ business.name }}</p>
            <strong>
                <i class="fas fa-map-marker-alt"></i>
                Location
            </strong>
            <p class="text-muted">
                {{ business.location }}
            </p>
            <strong>
                <i class="fa fa-list-alt"></i>
                Industry Sector
            </strong>
            <p class="text-muted">{{ business.industrySector ? business.industrySector.name }}</p>
            <strong>
                <i class="fa fa-check-square"></i>
                State
            </strong>
            <p class="text-muted">
                {% if business.active %}
                    <span class="badge badge-success">Active</span>
                {% else %}
                    <span class="badge badge-danger">Inactive</span>
                {% endif %}
            </p>
        </div>
        <div class="col-8">
            <div class="row qr-code-details-container">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            {% set reviewLinksCount = 3 %}
                            {% set noReviewLinksId = 'noReviewLinks_Dashboard' %}

                            {% if reviewLinksCount == 0 %}
                                {{ helpers.no_result('No Review Link has been added for "'~ business.name ~'".', noReviewLinksId) }}
                            {% else %}
                                {% for i in 1..reviewLinksCount %}
                                    <div data-id="review-details" class="bg-white bg-shadow p-2 mb-3">
                                        <div class="row">
                                            <div class="col-12 text-center">
                                                <img src="{{ asset('/img/qrcode.png') }}"
                                                     class="img-fluid qr-code-hover cursor-pointer"
                                                     data-toggle="modal" data-target="#modalShowQrCode">
                                            </div>
                                            <div class="col-12 text-center">
                                                <a href="#">https://symfony.com/doc/5.4/validation.html</a>
                                            </div>
                                            <div class="col-12 text-center p-2">
                                                <button title="Copy Review Link to Clipboard"
                                                        data-review-link="https://symfony.com/doc/5.4/validation.html"
                                                        class="btn btn-outline-info btn-xs btnCopyToClipBoard">
                                                    <i class="fa fa-copy"></i>
                                                    <span class="text-copy-clipboard">Copy Review Link to Clipboard</span>
                                                </button>
                                                <button class="btn btn-outline-info btn-xs"
                                                        data-id="btn-open-remove-review-confirmation"
                                                        data-noReviewLinksId="#noReviewLinksId">
                                                    <i class="fa fa-trash"></i>
                                                    Remove
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>