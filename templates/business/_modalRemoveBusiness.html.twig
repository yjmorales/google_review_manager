<div class="modal fade"
     id="modalDeleteListItem"
     tabindex="-1"
     aria-labelledby="modalDeleteListItemLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <form data-id="formBusiness">
            <div class="modal-content">
                <div class="modal-header bg-gradient-danger pt-1 pb-1">
                    <span class="modal-title" data-id="modal-title" id="modalDeleteListItemLabel">Delete and item</span>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div id="modalDeleteListItemConfirmationText" class="col text-center" data-id="modal-body">
                            Do you accept to delete the item?
                        </div>
                    </div>
                </div>
                <div class="modal-footer p-1">
                    <button id="btnDeleteListItemLabel" data-id="modal-ok-button" type="button"
                            class="btn btn-info btn-xs m-0">Accept
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>